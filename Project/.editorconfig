# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript/JavaScript 文件
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# CSS/SCSS 文件
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# HTML 文件
[*.{html,htm}]
indent_style = space
indent_size = 2

# XML 文件
[*.{xml,svg}]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell 脚本
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Python 文件
[*.py]
indent_style = space
indent_size = 4

# Makefile (必须使用 tab)
[{Makefile,makefile,GNUmakefile}]
indent_style = tab
indent_size = 4

# 包管理器文件
[{package.json,package-lock.json}]
indent_style = space
indent_size = 2

# 配置文件
[*.{config.js,config.ts}]
indent_style = space
indent_size = 2