# 开发环境配置
NODE_ENV=development
PORT=8000

# 数据库配置
DB_PATH=../database/knowledge_base.db

# JWT配置
JWT_SECRET=dev-jwt-secret-key-2025
JWT_ACCESS_SECRET=dev-jwt-secret-key-2025
JWT_REFRESH_SECRET=dev-jwt-secret-key-2025
JWT_ACCESS_EXPIRY=2h
JWT_REFRESH_EXPIRY=7d

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,xls,xlsx,txt,md,jpg,jpeg,png,gif

# 跨域配置
CORS_ORIGIN=http://localhost:3000

# 日志配置
LOG_LEVEL=debug
LOG_FILE=./logs/app.log